// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id       Int      @id @default(autoincrement())
  name     String
  price    Float
  orders   Order[]  @relation("ProductOrders") // Add this line for the inverse relation
}

model Order {
  id            Int      @id @default(autoincrement())
  productId     Int
  quantity      Int
  deliveryName  String
  deliveryPhone String
  deliveryAddr  String
  status        String  @default("Pending") // Pending, In Progress, Delivered
  createdAt     DateTime @default(now())

  product       Product @relation("ProductOrders", fields: [productId], references: [id]) // Link this relation to ProductOrders
}

